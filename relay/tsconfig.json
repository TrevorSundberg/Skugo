{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES6",
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "bin",
    "paths": {
      "src/*": [
        "src/*"
      ],
    }
  }
}